# ARM Platform Environment Variables
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control

# Convex Deployment URL
# Required for loading function specifications
# Get this from your Convex dashboard
CONVEX_URL=https://your-deployment.convex.cloud

# Optional: Custom retention period for audit logs (in days)
# Default: 90 days if not specified
AUDIT_LOG_RETENTION_DAYS=90

# Optional: Enable debug logging for PII handling
# Set to 'true' to enable, 'false' or omit to disable
PII_DEBUG_LOGGING=false
