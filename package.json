{
  "name": "agent-resources-platform",
  "version": "0.1.0",
  "description": "Enterprise system of record and mission control for AI agent fleets",
  "private": true,
  "workspaces": [
    "services/*",
    "ui",
    "shared"
  ],
  "scripts": {
    "infra:up": "cd infra/docker && docker-compose up -d",
    "infra:down": "cd infra/docker && docker-compose down",
    "infra:logs": "cd infra/docker && docker-compose logs -f",
    "migrate": "docker exec -i ar-postgres psql -U ar -d ar_dev < services/control-plane/migrations/001_init_schema.sql && docker exec -i ar-postgres psql -U ar -d ar_dev < services/control-plane/migrations/002_seed_data.sql",
    "api": "cd services/control-plane && source venv/bin/activate && python api/main.py",
    "test": "vitest",
    "test:unit": "cd ui && vitest run",
    "test:convex": "vitest run convex",
    "test:e2e": "npx playwright test",
    "test:all": "pnpm test:unit && pnpm test:convex && pnpm test:e2e",
    "test:coverage": "cd ui && vitest run --coverage",
    "deploy:convex": "convex deploy --prod",
    "deploy:vercel": "cd ui && vercel --prod",
    "build:ui": "cd ui && pnpm build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jaydubya818/agent-resources-platform.git"
  },
  "author": "",
  "license": "MIT",
  "packageManager": "pnpm@10.15.0+sha512.486ebc259d3e999a4e8691ce03b5cac4a71cbeca39372a9b762cb500cfdf0873e2cb16abe3d951b1ee2cf012503f027b98b6584e4df22524e0c7450d9ec7aa7b",
  "dependencies": {
    "convex": "^1.31.7",
    "isolated-vm": "^4.7.2"
  },
  "devDependencies": {
    "@edge-runtime/vm": "^5.0.0",
    "convex-test": "^0.0.41",
    "vitest": "^1.6.1"
  }
}
